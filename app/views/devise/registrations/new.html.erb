<div class= "container">
  <div class= "card-white">
    <div class="double-cards-grid">
      <div class="sign-card">
        <h2 class="header-blue mb-4">Sign up</h2>
        <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name), defaults: {label: false}) do |f| %>
          <%= f.error_notification %>

          <div class="form-inputs">
            <%= f.input :name,
                        required: true,
                        autofocus: true,
                        input_html: { autocomplete: "Name"},
                        placeholder: 'Name'%>
            <%= f.input :lastname,
                        required: true,
                        autofocus: true,
                        placeholder: 'Last name'%>
            <%= f.input :username,
                        required: true,
                        autofocus: true,
                        placeholder: 'username'%>
            <%= f.input :email,
                        required: true,
                        autofocus: true,
                        placeholder: 'Email'%>
            <%= f.input :password,
                        required: true,
                        hint: ("#{@minimum_password_length} characters minimum" if @minimum_password_length),
                        placeholder: 'Password' %>
            <%= f.input :password_confirmation,
                        required: true,
                        placeholder: 'Password confirmation' %>
          </div>

          <div class="form-actions">
            <%= f.button :submit, "Join", class: "btn btn-blue w-100 mt-3" %>
          </div>
        <% end %>

        <div class="my-3 text-line">
          <span>ou</span>
        </div>

        <div class= "text-center">
        <%= render "devise/shared/links" %>
        </div>
      </div>

      <div class="sign-card">
        <%= image_tag "undraw_mobile_login_re_9ntv.svg" %>
      </div>
    </div>

  </div>
</div>
