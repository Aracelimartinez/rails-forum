
<div class="container">
  <div class= "d-flex justify-content-between mt-5">
    <h2 class="fw-semibold m-0  fs-2">My posts</h2>
    <%= link_to "Create new post", new_post_path, class:"btn btn-primary rounded-3 text-white"  %>
  </div>
  <div class="row row-cols-1 row-cols-md-2 g-4 my-5">
    <% @posts.each do |post| %>
      <div class="col">
        <div class="card post-card">
          <div class="card-body d-flex flex-column justify-content-between">
            <h3 class="card-title fw-semibold fs-5 text-break text-truncate"><%= post.title%></h3>
            <p class="card-text text-break truncate-paragraph"><%= post.content%></p>
            <div class= "d-flex justify-content-end">
            <%= link_to post_path(post), class: "btn btn-primary text-white border border-light rounded-3 ms-2" do %>
              <i class="fa-solid fa-eye"></i>
            <% end %>
            <%= link_to edit_post_path(post), class: "btn btn-secondary text-white border border-light rounded-3  ms-2" do %>
              <i class="fa-solid fa-pen-to-square"></i>
            <% end %>
            <%= link_to post_path(post),  data: { turbo_method: :delete, turbo_confirm: 'Are you sure?' }, class: "btn btn-danger text-white border border-light rounded-3 ms-2" do %>
              <i class="fa-solid fa-trash"></i>
            <% end %>
            </div>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>
