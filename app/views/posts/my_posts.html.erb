<h2>My posts</h2>

  <%= link_to "Create new post", new_post_path%>

  <div>
    <% @posts.each do |post| %>
    <div>
      <h2><%= post.title%></h2>
      <p><%= post.content%></p>
    <%= link_to "See more ...", post_path(post), class: "text-decoration-none" %>
    </div>
    <% end %>
  </div>
</div>
