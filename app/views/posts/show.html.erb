<div>

  <h2><%=@post.title%></h2>
  <p><%=@post.content%></p>
  <p><%=@post.user.username%></p>

  <% if policy(@post).edit? %>
  <%= link_to "Edit", edit_post_path(@post)%>
  <% end %>
  <% if policy(@post).destroy? %>
  <%= link_to "Destroy",  post_path(@post),  data: { turbo_method: :delete, turbo_confirm: 'Are you sure?' }%>
  <% end %>
</div>
